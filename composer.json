{
    "name": "thughack/manga-bin-reader",
    "description": "Efficient manga reader with bin file storage",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "ThuGhacK",
            "email": "thughack@hotmail.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "ext-fileinfo": "*",
        "monolog/monolog": "^2.3",
        "php-di/php-di": "^6.3",
        "respect/validation": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^0.12"
    },
    "autoload": {
        "psr-4": {
            "MangaBinReader\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MangaBinReader\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs",
        "analyze": "phpstan analyse src",
        "fix": "phpcbf"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}