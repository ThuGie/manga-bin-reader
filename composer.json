{
    "name": "thughack/manga-bin-reader",
    "description": "Efficient manga reader with bin file storage",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "ThuGhacK",
            "email": "thughack@hotmail.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "ext-fileinfo": "*",
        "monolog/monolog": "^2.3",
        "vlucas/phpdotenv": "^5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^0.12",
        "mockery/mockery": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "MangaBinReader\\": "src/",
            "MangaBinReader\\Backend\\": "backend/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MangaBinReader\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs src backend",
        "fix": "phpcbf src backend",
        "analyze": "phpstan analyse src backend",
        "setup": "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}